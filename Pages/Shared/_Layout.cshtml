<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calculator</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <header>
        <nav class="py-8 px-4 bg-gray-100 border-bottom box-shadow mb-3">
            <div class="container">
                <a class="text-4xl" asp-area="" asp-page="/Index">Basic Calculator</a>
            </div>
        </nav>
    </header>
    <div class="w-full">
        <main role="main" class="my-10">
            @RenderBody()
        </main>
    </div>
</body>
</html>